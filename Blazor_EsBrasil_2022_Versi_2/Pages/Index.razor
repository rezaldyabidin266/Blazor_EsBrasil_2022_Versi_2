        </div>
    </section>

    <!-- Garis Tengah-->
    <div class="container">
        <div class="row mx-3">
            <hr class="hr-toko" />
        </div>
    </div>

    <!-- Jam Operasional-->
    <section class="container-fluid section-jam-operasional">
        <div class="judul-jam-operasional">
            <p>Jam Operasional</p>
        </div>
        <div class="waktu-jam-operasional">
            <p class="kerja">
                Senin - Sabtu <br />
                08 : 00 - 18 : 00
            </p>
            <p class="libur">
                Minggu Libur
            </p>
        </div>
    </section>

    <!-- Sosmed -->
    <section class="container-fluid section-sosmed">
        <div class="row px-4">
            <div class="card-sosmed mx-auto">
                <div class="judul-sosmed">
                    <p>Ikuti kami di Sosmed</p>
                </div>
                <div class="wrap-sosmed mx-auto d-flex justify-content-evenly flex-wrap">
                    <div class="mb-3">
                        <a target="_blank" href="https://www.facebook.com/Esbrasilbgr" class="fcb d-flex align-items-center"><i class="fab fa-facebook me-2 fa-lg"></i>Es Brasil</a>
                    </div>
                    <div class="">
                        <a target="_blank" href="https://www.instagram.com/esbrasil_bogor/" class="ig d-flex align-items-center"><i class="fab fa-instagram me-2 fa-lg"></i>esbrasil_bogor</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



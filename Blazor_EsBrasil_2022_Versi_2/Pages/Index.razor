@page "/"
@using Blazor_EsBrasil_2022_Versi_2.Properties.Class
@inject IJSRuntime Js

<PageTitle>Es Brasil</PageTitle>

<style>
    .swiper {
        width: 100%;
        height: 100%;
    }

    .swiper-pagination > .swiper-pagination-bullet {
        background-color: #9D0000;
        width: 6px;
        height: 6px;
    }

    .swiper-pagination > .swiper-pagination-bullet-active {
        background-color: white;
    }

    .red-bullet > .swiper-pagination-bullet {
        background-color: #c7c7c7;
        width: 6px;
        height: 6px;
    }


    .red-bullet > .swiper-pagination-bullet-active {
        background: #DD1C1C;
    }

</style>

<div>

    <!--Top Banner-->
    <section class="section-top-banner ">
        <div class="container container-top-banner">
            <div class="text-layout d-flex align-items-center justif-content-center h-100">
                <p class="text-setting mx-auto">
                    “Temukan banyak<br />
                    <span>manfaat</span> di setiap Varian <br />
                    Rasa <span>Es Brasil</span> kami.“
                </p>
            </div>
            <div class="logo-glow text-center">
                <img class="" src="asset/logo/logoPutih.webp" />
            </div>
        </div>

    </section>

    <!-- Tentang Kami -->
    <section id="tentang_kami" class="container section-tentang-kami">
        <div class="row px-4 align-items-center">
            <div class="col-12 col-md-6 tentang-kami-text">
                <p>
                    Produk rumahan yang merupakan
                    usaha keluarga dan berasal dari purwokerto.
                    Produk ini awalnya yakni Es Mambo atau
                    sejenis Es Lilin yang dijajakan keliling. Rasa
                    pertama yang dibuat adalah Kacang
                    Hijau. Hingga saat ini sudah ada
                    9 Varian Rasa.
                </p>
            </div>
            <div class="col-12 col-md-6 d-none d-md-block tentang-kami-image">
                <img class="mx-auto mt-2" src="asset/background/es.webp" />
            </div>
        </div>
    </section>

    <!-- Varian Rasa -->
    <section id="produk" class="container-fluid section-varian-rasa">
        <div class="row px-3">
            <div class="box-swiper">
                <div class="varian-rasa-judul">
                    <p>Varian Rasa</p>
                </div>
                <!-- Swiper -->
                <div class="swiper swiperVarianRasa">
                    <div class="swiper-wrapper">

                        <!-- Loop Varian Rasa-->
                        <Virtualize Items="@varianRasa" Context="varian">
                            <div data-hash="slide-@varian.url" class="swiper-slide">
                                <div class="wrap-slider d-flex flex-column">
                                    <div class="box-ice">
                                        <img class="mx-auto" src="@varian.url" alt="Es Brasil" />
                                    </div>
                                    <div class="text-ice">
                                        <p>@varian.rasa</p>
                                    </div>
                                </div>
                            </div>
                        </Virtualize>

                    </div>
                </div>
                <div class="swiper-pagination white-bullet"></div>
            </div>
        </div>
    </section>

    <!-- Es Sehat -->
    <section class="container-fluid section-es-sehat">
        <div class="wrapping-es-sehat">
            <p class="text-es-sehat">
                <span>ES Sehat</span>,<br />
                Tanpa Bahan Pengawet <br />
                100% Gula Asli
            </p>
        </div>
    </section>

    <!-- Garis Tengah-->
    <div class="container">
        <div class="row mx-3">
            <hr class="hr-toko" />
        </div>
    </div>

    <!-- Bg Merah Start -->
    <div style="background: linear-gradient(222.33deg, #FF001F 37.17%, #D10000 95.75%);">

        <!-- Tersedia di TOKO-->
        <section id="toko" class="container-fluid section-toko bg-white">
            <div class="row px-4">
                <div class="judul-toko">
                    <p>Tersedia di Toko</p>
                </div>

                <!--Swiper Tersedia di Toko-->
                <div class="swiper swiperToko">
                    <div class="swiper-wrapper">

                        <!-- Loop Toko-->
                        <Virtualize Items="@tokoKoordinat" Context="toko">
                            <div class="swiper-slide">
                                <div class="wrap-slider d-flex flex-column">
                                    <div class="box-toko">
                                        <img src="@toko.url" alt="Toko Es Brasil" />
                                    </div>
                                    <p class="nama-toko">@toko.name</p>
                                    <a class="google-maps-toko">Lihat di Google Map</a>
                                </div>
                            </div>
                        </Virtualize>

                    </div>
                </div>

                <div class="swiper-pagination red-bullet"></div>
            </div>
        </section>

        <!-- Mitra Kami -->
        <section id="mitra" class="container-fluid section-mitra-kami">
            <div class="row px-3">
                <div class="judul-mitra">
                    <p>Mitra Kami</p>
                </div>

                <div class="swiper swiperMitra">
                    <div class="swiper-wrapper">

                        <!-- Loop Mitra-->
                        <Virtualize Items="@mitra" Context="url">
                            <div class="swiper-slide">
                                <div class="wrap-slider d-flex flex-column">
                                    <div class="box-mitra">
                                        <img class="mx-auto" alt="Mitra Es Brasil" src="@url" />
                                    </div>
                                </div>
                            </div>
                        </Virtualize>

                    </div>
                </div>
                <div class="swiper-pagination mitra-bullet"></div>
            </div>
        </section>

    </div> <!--Bg Merah End-->

    <!-- Lowongan Section -->
    <section id="lowongan_kerja" class="container-fluid section-lowongan">
        <div class="row px-5">
            <div class="col-12 col-sm-6 d-none d-sm-block img-ilustrasi ">
                <img class="ms-auto" src="asset/illustrator/bergabung-revisi-2.webp" />
            </div>
            <div class="col-12 col-sm-6 text-lowongan d-flex align-items-center justify-content-center">
                <div class="text-wrap">
                    <p>
                        Tertarik Untuk <br />
                        Bekerja dengan
                        Kami ?
                    </p>
                    <div class="button-lowongan">
                        <a target="_blank" href="https://loker.esbrasilonline.com/" class="wrap-lowongan">
                            <button class="btn-lowongan mx-auto mx-sm-0 d-flex align-items-center">
                                Selengkapnya 
                                <i class="fas fa-angle-right ms-2"></i>
                            </button>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Garis Tengah-->
    <div class="container">
        <div class="row mx-3">
            <hr class="hr-toko" />
        </div>
    </div>

    <!-- Hubungi Kami -->
    <section id="hubungi_kami" class="container section-hubungi-kami">
        <div class="row px-3">

            <div class="col-12 col-xl-4 content-kiri">
